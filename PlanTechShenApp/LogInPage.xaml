<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanTechShenApp.LogInPage"
             Title="Log In">
    
    <ContentPage Title="Log in">
        <ContentPage.ToolbarItems>
            <ToolbarItem Text="My profile"
                     Order="Primary" />
        </ContentPage.ToolbarItems>

        <ContentPage.Content>

            <StackLayout>
                <Image Source="contact.png"/>

                <Label Text="Surname"
                   TextColor="Black"
                   FontSize="25"/>
                <Entry x:Name="Surname" />

                <Label Text="Password"
                   TextColor="Black"
                   FontSize="25"/>
                <Entry x:Name="Password" />

                <Button Text="Submit"
                    FontSize="25"
                    Clicked="LogInClickedAsync"/>
                    
        </StackLayout>
    </ContentPage.Content>
    </ContentPage>
</TabbedPage>