<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanTechShenApp.SignIn"
             Title="Sign up">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name"
                   TextColor="Black"
                   FontSize="25"/>
        <Entry x:Name="Name" />

        <Label Text="Surname"
                   TextColor="Black"
                   FontSize="25"/>
        <Entry x:Name="Surname" />

        <Label Text="Email"
                   TextColor="Black"
                   FontSize="25"/>
        <Entry x:Name="email" />

            <Label Text="Phone"
                   TextColor="Black"
                   FontSize="25"/>
            <Entry x:Name="phone" />

            <Label Text="Password"
                   TextColor="Black"
                   FontSize="25"/>
            <Entry x:Name="Password" />

            <Label Text="Confirm password"
                   TextColor="Black"
                   FontSize="25"/>
            <Entry x:Name="confirmpassword" />



            <Button Text="Sign up"
                Clicked="SignInClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>