                 Grid.Column="2"
                 Color="DarkSlateBlue" />


        <Label Grid.Row="1"
               Grid.Column="2"
               Text="legumes"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="2"
                 Color="SteelBlue" />

        <Label Grid.Row="2"
               Text="Basil"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
