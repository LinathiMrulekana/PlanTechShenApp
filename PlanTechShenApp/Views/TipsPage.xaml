                 Grid.Column="1"
                 Color="LightBlue" />

        <Label Grid.Row="2"
               Grid.Column="1"
               Text="pepper, tomato, asparagus, oregano"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <BoxView Grid.Row="2"
                 Grid.Column="2"
                 Color="GhostWhite" />
        <Label Grid.Row="2"
               Grid.Column="2"
               Text="none"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        
        <BoxView Grid.Row="3"
                 Grid.Column="0"
                 Color="WhiteSmoke"/>
        <Label Grid.Row="3"
               Grid.Column="0"
               Text="Beans, bush"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="3"
                 Grid.Column="1"
                 Color="WhiteSmoke"/>
        <Label Grid.Row="3"
               Grid.Column="1"
               Text="cucumber, strawberry"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="3"
                 Grid.Column="2"
                 Color="WhiteSmoke"/>
        <Label Grid.Row="3"
               Grid.Column="2"
               Text="dry beans"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="4"
                 Grid.Column="0"
                 Color="Aqua"/>
        <Label Grid.Row="4"
               Grid.Column="0"
               Text="Beans, pole"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="4"
                 Grid.Column="1"
                 Color="Aqua"/>
        <Label Grid.Row="4"
               Grid.Column="1"
               Text="corn, radishes, nasturtium, zinnia"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="4"
                 Grid.Column="2"
                 Color="Aqua"/>
        <Label Grid.Row="4"
               Grid.Column="2"
               Text="sunflower, beet,brassicas"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="5"
                 Grid.Column="0"
                 Color="White"/>
