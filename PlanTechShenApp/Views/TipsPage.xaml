               Grid.Column="0"
               Text="Beets"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="5"
                 Grid.Column="1"
                 Color="DarkViolet"/>
        <Label Grid.Row="5"
               Grid.Column="1"
               Text="bush beans, brassicas, lettuce, alliums"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <BoxView Grid.Row="5"
                 Grid.Column="2"
                 Color="LavenderBlush"/>
        <Label Grid.Row="5"
               Grid.Column="2"
               Text="pole beans"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>



        <BoxView Grid.Row="6"/>
        <Button Text="start up"
                Grid.Row="6"
                Clicked="StartUpClicked"/>
